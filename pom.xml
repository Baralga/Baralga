<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.remast.baralga</groupId>
	<artifactId>parent</artifactId>
	<packaging>pom</packaging>
	<version>1.8.4-SNAPSHOT</version>
	<name>Baralga Parent</name>
	<url>https://baralga.github.io</url>
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<jqassistant.version>1.8.0</jqassistant.version>

		<!-- SonarCloud -->
		<sonar.jacoco.reportPath>target/jacoco.exec</sonar.jacoco.reportPath>
	</properties>
	<scm>
		<connection>scm:git:https://github.com/Baralga/baralga.git</connection>
		<developerConnection>scm:git:https://github.com/Baralga/baralga.git</developerConnection>
		<url>https://github.com/Baralga/baralga</url>
	</scm>
	<issueManagement>
		<url>https://github.com/Baralga/baralga/issues</url>
	</issueManagement>
	<developers>
		<developer>
			<name>Jan Stamer</name>
			<email>baralga@geekmail.de</email>
			<roles>
				<role>architect</role>
				<role>developer</role>
			</roles>
		</developer>
	</developers>
	<licenses>
		<license>
			<name>GNU Lesser General Public License</name>
			<url>http://www.gnu.org/licenses/lgpl.html</url>
			<distribution>manual</distribution>
		</license>
	</licenses>
	<organization>
		<name>Jan Stamer</name>
	</organization>
	<modules>
		<module>baralga-core</module>
		<module>baralga-installer</module>
	</modules>
	<build>
		<plugins>
			<plugin>
				<groupId>com.buschmais.jqassistant</groupId>
				<artifactId>jqassistant-maven-plugin</artifactId>
				<version>${jqassistant.version}</version>
				<executions>
					<execution>
						<goals>
							<goal>scan</goal>
							<goal>analyze</goal>
						</goals>
						<configuration>
                     		<store>
                                <uri>file:target/mystore</uri>
                                <username>jqa_baralga</username>
                                <password>b.NZGuJcooLXTX.zuPUFEq3JOHYqpUE</password>
                            </store>
							<groups>
								<group>jqassistant-dashboard:Default</group>
								<!-- Insert your own group references here -->
							</groups>
							<!-- Include .git folder path as a scan location -->
							<scanIncludes>
								<scanInclude>
									<path>${project.basedir}/.git</path>
								</scanInclude>
								<scanInclude>
									<path>${project.build.directory}/site/jacoco/jacoco.xml</path>
								</scanInclude>
							</scanIncludes>
							<scanProperties>
								<jqassistant.plugin.jacoco.filename>jacoco.xml</jqassistant.plugin.jacoco.filename>
								<jqassistant.plugin.jacoco.dirname>${project.build.directory}/site/jacoco</jqassistant.plugin.jacoco.dirname>
							</scanProperties>
							<warnOnSeverity>MINOR</warnOnSeverity>
							<failOnSeverity>MAJOR</failOnSeverity>
						</configuration>
					</execution>
				</executions>
				<!-- Add the jqassistant-dashboard-plugin itself as a dependency-->
				<dependencies>
					<dependency>
						<groupId>org.jqassistant.contrib.plugin</groupId>
						<artifactId>jqassistant-dashboard-plugin</artifactId>
						<version>1.8.0</version>
					</dependency>
				</dependencies>
			</plugin>
		</plugins>
	</build>
</project>
